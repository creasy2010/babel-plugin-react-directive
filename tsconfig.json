{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable","es5", "es6", "dom","es7","esnext"],
    "module": "commonjs",
    "sourceMap": false,
    "noImplicitAny": false,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "outDir": "lib",
    "baseUrl": ".",
    "rootDirs": ["src", "src/web_modules",".","typings"],
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "exclude": ["node_modules", "dist"],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": true,
    "isolatedModules": true,
    "forceIsolatedModules": true,
    "transpileOnly": true,
    "reportFiles": ["src/**/*.{ts,tsx}", "web_modules/**/*.{ts,tsx}"]
  }
}
